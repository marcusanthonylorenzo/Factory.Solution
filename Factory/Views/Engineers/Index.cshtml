@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineer Accounts Page</h1>

@if (@Model.Count == 0)
{
  <h3>No registered Engineers at the present moment.</h3>
}


  @foreach (Engineer engineer in Model)
  {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }, new {@Class = "engineer-list-item" })</li>
  }
  

<p>@Html.ActionLink("Register a new Engineer", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>